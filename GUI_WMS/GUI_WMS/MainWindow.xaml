                             Background="red"
                             Foreground="White"
                             Click="BookSlotButton_Click"
                             HorizontalAlignment="Center">
                        Buy Now
                    </Button>
                </StackPanel>
                <StackPanel Grid.Column="0" Width="150" Height="Auto "
                             Margin="10,10,-970,0">
                    <Image Source="C:\Users\User\Documents\watches\menu_5.JPG" Panel.ZIndex="1000"
                             Width="200"
                             HorizontalAlignment="Center"/>
                    <Label Content="Rs : 6500" 
                             FontSize="16"
                             HorizontalAlignment="Center"
                             Margin="5"/>
                    <Button Width="150"
                             Height="40"
                             FontSize="16"
                             FontWeight="Bold"
                             Background="red"
                             Foreground="White"
                             Click="BookSlotButton_Click"
                             HorizontalAlignment="Center">
                        Buy Now
                    </Button>
                </StackPanel>


            </Grid>
        </Grid>
        <!-- Footer Section -->
        <DockPanel Grid.Row="3" Background="LightGray" LastChildFill="False" Height="45">
            <!-- Copyright Information -->
            <Label Content="@All rights reserved."
                   FontSize="16"
                   Margin="10"
                   Padding="2"
                   DockPanel.Dock="Left"/>

            <!-- Contact Information -->
            <Label Content="Contact Us: 0723000184"
                   FontSize="16"
                   Margin="10"
                   Padding="2"
                   DockPanel.Dock="Right"/>
        </DockPanel>
    </Grid>
</Window>
