<Window x:Class="GUI_WMS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI_WMS"
        mc:Ignorable="d"
        Title="Online Watch Selling"
        Height="600" Width="900"
        MinWidth="800" MinHeight="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White">

    <Grid>
        <!-- Grid Row Definitions -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <DockPanel Grid.Row="0" Background="black" LastChildFill="False">
            <!-- Application Title -->
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" Margin="10">
                <!-- Application Title -->
                <Label Content="EmrasWATCHFIT"
                       FontSize="30"
                       FontWeight="Bold"
                       Foreground="Aqua"
                       VerticalAlignment="Center"/>

                <!-- Logo Image -->
                <Border Width="40" Height="40" Margin="10,0,0,0" VerticalAlignment="Center" CornerRadius="20">
                    <Image Source="C:\Users\User\Desktop\logo.jpg" Stretch="UniformToFill"/>
                </Border>
            </StackPanel>

            <!-- Navigation Buttons (Aligned to the Right) -->
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" Margin="10">
                <Button Content="Home" Margin="5" Padding="10" MinWidth="80" FontWeight="Bold" Background="MediumPurple"  Click="HomeButton_Click"/>
                <Button Name="about" Content="About" Margin="5" Padding="10" MinWidth="80"  Background="Orange" FontWeight="Bold" Click="AboutButton_Click"/>
                <Button Name="login" Content="Login" Margin="5" Padding="10" MinWidth="80" Background="Red"  FontWeight="Bold" Click="LoginButton_Click"/>
                <Button Name="register" Content="Register" Margin="5" Padding="10" MinWidth="80" Background="Aquamarine"  FontWeight="Bold" Click="RegisterButton_Click"/>
            </StackPanel>
        </DockPanel>

        <!-- Main Content Section -->
        <Grid Grid.Row="1" Background="White" Margin="0,0,0,51" HorizontalAlignment="Center" Width="900" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="67*"/>
            </Grid.ColumnDefinitions>

            <!-- Welcome Message Section -->
            <StackPanel Background="DarkBlue" VerticalAlignment="Top" HorizontalAlignment="Left" MaxWidth="1000" Grid.ColumnSpan="2" Width="900" Height="123">
                <TextBlock Text="Welcome to EmrasWATCHFIT online selling"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="white"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="-25,10,0,0"/>
                <TextBlock Text="Order your favourite watch here."
                           FontSize="45"
                           Foreground="LightBlue" Width="742"
                           FontWeight="ExtraBlack"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </StackPanel>
       
            
        </Grid>


        <Grid Grid.Row="2">
            <Grid Margin="20,128,20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="500" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Parking Slot 1 (Change to Watch Section) -->
                <StackPanel Grid.Column="0" Width="150" Height="Auto"
                            Margin="10,10,310,0" >
                         <Image Source="C:\Users\User\Documents\watches\menu_5.JPG" Panel.ZIndex="1000"
                             Width="200"
                             HorizontalAlignment="Center"/>
                         <Label Content="Rs : 6500" 
                             FontSize="16"
                             HorizontalAlignment="Center"
                             Margin="5"/>
                         <Button Width="150"
                              Height="40"
                              FontSize="16"
                              FontWeight="Bold"
                              Background="red"
                              Foreground="White"
                              Click="BookSlotButton_Click"
                              HorizontalAlignment="Center">
                        Buy Now
                    </Button>
                </StackPanel>
                <StackPanel Grid.Column="0" Width="150" Height="Auto "
                             Margin="10,10,-10,0">
                    <Image Source="C:\Users\User\Documents\watches\menu_5.JPG" Panel.ZIndex="1000"
                             Width="200"
                             HorizontalAlignment="Center"/>
                    <Label Content="Rs : 6500" 
                             FontSize="16"
                             HorizontalAlignment="Center"
